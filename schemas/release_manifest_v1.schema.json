{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://47project/schemas/release_manifest_v1.schema.json",
  "title": "47Project Release Manifest v1",
  "type": "object",
  "required": [
    "schemaVersion",
    "version",
    "createdAt",
    "artifacts",
    "sha256"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "version": {
      "type": "string"
    },
    "createdAt": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "sha256"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "sha256": {
      "type": "string"
    },
    "signature": {
      "type": "object",
      "properties": {
        "alg": {
          "type": "string"
        },
        "kid": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}