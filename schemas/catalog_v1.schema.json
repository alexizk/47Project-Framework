{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://47project/schemas/catalog_v1.schema.json",
  "title": "App Catalog v1",
  "type": "object",
  "required": [
    "schemaVersion",
    "catalogId",
    "apps"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "catalogId": {
      "type": "string"
    },
    "apps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "provider",
          "packageId"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "provider": {
            "type": "string"
          },
          "packageId": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
