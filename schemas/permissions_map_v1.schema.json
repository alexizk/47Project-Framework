{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://47project/schemas/permissions_map_v1.schema.json",
  "title": "47Project Permissions Map v1",
  "type": "object",
  "required": [
    "schemaVersion",
    "updatedAt",
    "map"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "updatedAt": {
      "type": "string"
    },
    "map": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "capability",
          "reason"
        ],
        "properties": {
          "capability": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}