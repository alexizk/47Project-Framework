<UserControl x:Class="_47Project.Nexus.Pages.PlaceholderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
  <Border Background="{DynamicResource App.Surface}" BorderBrush="{DynamicResource App.Border}" BorderThickness="1" CornerRadius="14" Padding="18">
    <TextBlock Text="{Binding Title}" FontSize="16" Foreground="{DynamicResource App.SubtleText}"/>
  </Border>
</UserControl>
