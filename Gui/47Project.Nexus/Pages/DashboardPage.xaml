<UserControl x:Class="_47Project.Nexus.Pages.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
      <Button Content="Run Doctor" Padding="14,8" Command="{Binding RunDoctorCommand}" />
      <TextBlock Text="{Binding Status}" Margin="12,0,0,0" VerticalAlignment="Center" />
    </StackPanel>

    <Border Grid.Row="1" Background="{DynamicResource App.Surface}" BorderBrush="{DynamicResource App.Border}" BorderThickness="1" CornerRadius="14" Padding="14">
      <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Doctor Checks" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
        <DataGrid ItemsSource="{Binding Checks}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
            <DataGridCheckBoxColumn Header="OK" Binding="{Binding Ok}" Width="Auto"/>
            <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="4*"/>
          </DataGrid.Columns>
        </DataGrid>
      </DockPanel>
    </Border>
  </Grid>
</UserControl>
