<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- 47Matrix Cyber-Minimal theme: minimal layout + cyberpunk neon accents + subtle matrix grid -->
  <Color x:Key="C.Bg">#FF050806</Color>
  <Color x:Key="C.Surface">#FF0B120E</Color>
  <Color x:Key="C.Surface2">#FF0F1712</Color>
  <Color x:Key="C.Border">#FF16231B</Color>
  <Color x:Key="C.Text">#FFE7FFE8</Color>
  <Color x:Key="C.SubtleText">#FFA6DDB2</Color>

  <Color x:Key="C.AccentGreen">#FF00FF66</Color>
  <Color x:Key="C.AccentCyan">#FF00C2FF</Color>
  <Color x:Key="C.AccentPurple">#FFB400FF</Color>

  <!-- Background as a tiled drawing brush (base fill + faint grid) -->
  <DrawingBrush x:Key="App.Background" TileMode="Tile" Viewport="0,0,96,96" ViewportUnits="Absolute" Stretch="None">
    <DrawingBrush.Drawing>
      <DrawingGroup>
        <!-- base -->
        <GeometryDrawing Brush="{StaticResource C.Bg}">
          <GeometryDrawing.Geometry>
            <RectangleGeometry Rect="0,0,96,96"/>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>

        <!-- primary grid -->
        <GeometryDrawing>
          <GeometryDrawing.Pen>
            <Pen Brush="#1400FF66" Thickness="1"/>
          </GeometryDrawing.Pen>
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <LineGeometry StartPoint="0,48" EndPoint="96,48"/>
              <LineGeometry StartPoint="48,0" EndPoint="48,96"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>

        <!-- secondary grid -->
        <GeometryDrawing>
          <GeometryDrawing.Pen>
            <Pen Brush="#0E00FF66" Thickness="1"/>
          </GeometryDrawing.Pen>
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <LineGeometry StartPoint="0,24" EndPoint="96,24"/>
              <LineGeometry StartPoint="0,72" EndPoint="96,72"/>
              <LineGeometry StartPoint="24,0" EndPoint="24,96"/>
              <LineGeometry StartPoint="72,0" EndPoint="72,96"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingBrush.Drawing>
  </DrawingBrush>

  <SolidColorBrush x:Key="App.Surface" Color="{StaticResource C.Surface}"/>
  <SolidColorBrush x:Key="App.Surface2" Color="{StaticResource C.Surface2}"/>
  <SolidColorBrush x:Key="App.Text" Color="{StaticResource C.Text}"/>
  <SolidColorBrush x:Key="App.SubtleText" Color="{StaticResource C.SubtleText}"/>
  <SolidColorBrush x:Key="App.Border" Color="{StaticResource C.Border}"/>

  <!-- Override accents -->
  <SolidColorBrush x:Key="App.Accent" Color="{StaticResource C.AccentGreen}"/>
  <SolidColorBrush x:Key="App.Accent2" Color="{StaticResource C.AccentCyan}"/>
  <SolidColorBrush x:Key="App.Success" Color="{StaticResource C.AccentGreen}"/>
  <SolidColorBrush x:Key="App.Warning" Color="#FFE1B12C"/>
  <SolidColorBrush x:Key="App.Error" Color="#FFFF3B3B"/>

  <!-- Helpers -->
  <DropShadowEffect x:Key="Fx.GlowGreen" Color="{StaticResource C.AccentGreen}" BlurRadius="18" ShadowDepth="0" Opacity="0.45"/>
  <DropShadowEffect x:Key="Fx.GlowCyan" Color="{StaticResource C.AccentCyan}" BlurRadius="16" ShadowDepth="0" Opacity="0.30"/>

  <Style TargetType="{x:Type TextBlock}">
    <Setter Property="Foreground" Value="{DynamicResource App.Text}"/>
  </Style>

  <Style TargetType="{x:Type Border}">
    <Setter Property="SnapsToDevicePixels" Value="True"/>
  </Style>

  <!-- Buttons: minimal surface with neon hover -->
  <Style TargetType="{x:Type Button}">
    <Setter Property="Foreground" Value="{DynamicResource App.Text}"/>
    <Setter Property="Background" Value="{DynamicResource App.Surface2}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource App.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Border x:Name="Bd"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="12"
                  Padding="{TemplateBinding Padding}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource App.Accent}"/>
              <Setter TargetName="Bd" Property="Background" Value="#1A00FF66"/>
              <Setter TargetName="Bd" Property="Effect" Value="{StaticResource Fx.GlowGreen}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="#2A00FF66"/>
              <Setter TargetName="Bd" Property="Effect" Value="{StaticResource Fx.GlowCyan}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Inputs -->
  <Style TargetType="{x:Type TextBox}">
    <Setter Property="Foreground" Value="{DynamicResource App.Text}"/>
    <Setter Property="Background" Value="{DynamicResource App.Surface2}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource App.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="10,7"/>
    <Setter Property="CaretBrush" Value="{DynamicResource App.Accent}"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type TextBox}">
          <Border x:Name="Bd" CornerRadius="12"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
              <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource App.Accent}"/>
              <Setter TargetName="Bd" Property="Effect" Value="{StaticResource Fx.GlowGreen}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.50"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="{x:Type ComboBox}">
    <Setter Property="Foreground" Value="{DynamicResource App.Text}"/>
    <Setter Property="Background" Value="{DynamicResource App.Surface2}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource App.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="10,7"/>
  </Style>

  <Style TargetType="{x:Type CheckBox}">
    <Setter Property="Foreground" Value="{DynamicResource App.Text}"/>
  </Style>

  <Style TargetType="{x:Type TabControl}">
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <Style TargetType="{x:Type TabItem}">
    <Setter Property="Foreground" Value="{DynamicResource App.Text}"/>
  </Style>

  <Style TargetType="{x:Type ProgressBar}">
    <Setter Property="Foreground" Value="{DynamicResource App.Accent}"/>
    <Setter Property="Background" Value="{DynamicResource App.Border}"/>
    <Setter Property="Height" Value="8"/>
  </Style>

  <!-- ListBoxItem selection glow -->
  <Style TargetType="{x:Type ListBoxItem}">
    <Setter Property="Foreground" Value="{DynamicResource App.Text}"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="Foreground" Value="{DynamicResource App.Text}"/>
      </Trigger>
    </Style.Triggers>
  </Style>

</ResourceDictionary>
