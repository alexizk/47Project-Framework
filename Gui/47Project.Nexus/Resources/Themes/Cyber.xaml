<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Cyber theme: stronger neon accents + contrast, no grid -->
  <Color x:Key="C.Bg">#FF040610</Color>
  <Color x:Key="C.Surface">#FF0A0F22</Color>
  <Color x:Key="C.Surface2">#FF0F1630</Color>
  <Color x:Key="C.Border">#FF1B2A57</Color>
  <Color x:Key="C.Text">#FFF2F4FF</Color>
  <Color x:Key="C.SubtleText">#FFB7C2FF</Color>

  <Color x:Key="C.AccentPink">#FFFF2FD2</Color>
  <Color x:Key="C.AccentCyan">#FF00E5FF</Color>
  <Color x:Key="C.AccentPurple">#FF8A5CFF</Color>

  <SolidColorBrush x:Key="App.Background" Color="{StaticResource C.Bg}"/>
  <SolidColorBrush x:Key="App.Surface" Color="{StaticResource C.Surface}"/>
  <SolidColorBrush x:Key="App.Surface2" Color="{StaticResource C.Surface2}"/>
  <SolidColorBrush x:Key="App.Text" Color="{StaticResource C.Text}"/>
  <SolidColorBrush x:Key="App.SubtleText" Color="{StaticResource C.SubtleText}"/>
  <SolidColorBrush x:Key="App.Border" Color="{StaticResource C.Border}"/>

  <SolidColorBrush x:Key="App.Accent" Color="{StaticResource C.AccentCyan}"/>
  <SolidColorBrush x:Key="App.Accent2" Color="{StaticResource C.AccentPink}"/>
  <SolidColorBrush x:Key="App.Success" Color="#FF00E5FF"/>
  <SolidColorBrush x:Key="App.Warning" Color="#FFFFCC00"/>
  <SolidColorBrush x:Key="App.Error" Color="#FFFF3B6A"/>

</ResourceDictionary>
